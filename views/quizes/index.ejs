
<div class="container-fluid animated animated-fast fadeIn margen_superior" id="partes_index">

	<h4><img src="/images/partes3.png" alt="" /> Partes de Lecturas</h4>


	<div class="panel panel-default table-responsive">

		<table class="table table-striped table-hover">

			<thead>
				<tr>
					<th class="text-center">Fecha</th>
					<th class="text-center">NÃºmero</th>
					<th class="text-center">User</th>
					<!-- <th class="text-center">Centro</th> -->
					<th class="text-center">Revisado</th>
				</tr>
			</thead>


			<tbody>
				<% for (var i in quizes) { %>

					<tr>

						<td class="text-center"><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].dia %>-<%= quizes[i].mes %>-<%= quizes[i].anio %></a></td>
						<td class="text-center"><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].id %></a></td>
						<td class="text-center"><%= quizes[i].UserName %></td>
						<!-- <td class="text-center"><%= quizes[i].centro %></td> -->
						<td class="text-center">
							<% if (quizes[i].estado === 'abierto') {%>
								<span class="" aria-hidden="true"></span>
							<%} else if (quizes[i].estado === 'cerrado') {%>
								<i class="fa fa-check"></i>
							<%}%>
						</td>

						<% if (session.user) {
							if (session.user.isAdmin || session.user.id === quizes[i].UserId) {%>
								<td style="width:40px"><a class="" href="/quizes/<%= quizes[i].id %>/print">
									<img src="/images/printer.png" style="width: 20px;"/>
								</a></td>
								<td style="width:40px"><a class="" href="/quizes/<%= quizes[i].id %>/edit">
									<img src="/images/edit3.png" style="width: 20px;"/>
								</a></td>
								<td style="width:40px">
									<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
										<button class="btn btn-danger btn-xs" type="submit" onClick="return confirm('Borrar el Parte de fecha: <%= quizes[i].dia %>-<%= quizes[i].mes %>-<%= quizes[i].anio %>');">
											<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
										</button>
									</form>
								</td>

							<%}%>
						<%}%>
					</tr>

				<% } %>
			</tbody>
		</table>
	</div>

	<% if (session.user) { %>

				<ul class="tira_botones">

					<li><a class="btn btn_gral" href="/quizes/new">
						<i class="fa fa-plus" alt=""></i> Crear Parte
					</a></li>

					<li><a class="btn btn_gral" href="/quizes/mes_index">
						<i class="fa fa-calendar" alt=""></i> Selecionar mes
					</a></li>

				</ul>

	<% } %>

	<br>

</div>
